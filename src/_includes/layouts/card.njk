<a class="card" href="/posts/{{ card.fileSlug }}/" hx-target="main" hx-select="main" hx-swap="outerHTML show:window:top">
  <h2 class="card__title">{{ card.data.title }}</h2>
  {% if card.data.image %}
  <img class="card__media" src="{{ card.data.image }}" alt="{{ card.data.title }} Image">
  {% endif %}
  <p class="card__text">{{ card.data.description }}</p>
</a>