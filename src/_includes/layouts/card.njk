<div class="card" hx-get="/partials/posts/{{ card.fileSlug }}/" hx-target="#card-container" hx-swap="outerHTML show:window:top" hx-push-url="/posts/{{ card.fileSlug }}/">
  <h2 class="card__title">{{ card.data.title }}</h2>
  {% if card.data.image %}
  <img class="card__media" src="{{ card.data.image }}" alt="{{ card.data.title }} Image">
  {% endif %}
  <p class="card__text">{{ card.data.description }}</p>
</div>